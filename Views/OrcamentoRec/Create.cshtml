@model Orcamento.Models.OrcamentoRec

@{
    ViewData["Title"] = "Create";
}

<h1>Lançamento</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescriptionR" class="control-label">Descrição</label>
                <input asp-for="DescriptionR" class="form-control" />
                <span asp-validation-for="DescriptionR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValueR" class="control-label">Valor</label>
                <input asp-for="ValueR" class="form-control" />
                <span asp-validation-for="ValueR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionCreateR" class="control-label">Data</label>
                <input asp-for="ActionCreateR" class="form-control" />
                <span asp-validation-for="ActionCreateR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lançar" class="Btn_Padrao" class="btn btn-primary" />
                <a asp-action="Index" class="Btn_Padrao">Voltar para Home</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
