<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Orcamento</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Orcamento.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
    <div>
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">Orçamento</a>
    </div>
        <nav class="nav-bar">
                
                    <ul>
                        <li >
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                    <a class="nav-link text-dark" asp-area="" asp-controller="OrcamentoPs" asp-action="Create__G">Lançar Gasto</a>
                        </li>
                        <li>
                    <a class="nav-link text-dark" asp-area="" asp-controller="OrcamentoRec" asp-action="Create">Lançar Receita</a>
                        </li> 
                   
                        
                    </ul>
                    <ul>
                    <li>
                        <details>
                            <summary>DashBoards</summary>
                            <a class="nav-link text-dark" asp-area="" asp-controller="OrcamentoPs" asp-action="Index__G">DashBoard Gasto</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="OrcamentoRec" asp-action="Index">DashBoard receita</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="OrcamentoGeral" asp-action="Index">DashBoard Geral</a>
                        </details>

                    </li>

                    </ul>
        </nav>
      
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
